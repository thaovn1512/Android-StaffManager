<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="13dp"
    app:cardElevation="6dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/staff_item_ava"
            android:layout_width="65dp"
            android:layout_height="65dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/staff_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test 1"
                android:textSize="18dp"
                android:textColor="#000000"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_person_outline_24"/>

                <TextView
                    android:id="@+id/txt_id_staff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CN01"
                    android:layout_marginLeft="4dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ic_baseline_business_24"/>

                <TextView
                    android:id="@+id/txt_factory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phân xưởng 1"
                    android:layout_marginLeft="4dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_number_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày công: 2"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>